<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="dataHotViewModel" type="com.example.android.navigation.viewModel.HotViewModel"/>
    </data>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/hot_scroll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hot_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/suggested_title_view"
                android:layout_alignLeft="@+id/suggested_title_view"
                android:layout_alignRight="@+id/suggested_title_view"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxLines="1"
                android:text="In evidenza"
                android:textSize="@dimen/channel_subscribers_text_size"
                android:visibility="visible"
                tools:ignore="RtlHardcoded"
                tools:text="In evidenza" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_top_content"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="@{()->dataHotViewModel.goToContent(dataHotViewModel.topItem)}"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/channel_banner_image"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@android:color/black"
                        android:scaleType="centerCrop"
                        android:src="@drawable/channel_banner"
                        tools:ignore="ContentDescription" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/card_view_top_content"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/additional_details_top_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/channel_subscribers_text_size"
                            android:visibility="visible"
                            tools:ignore="RtlHardcoded"
                            tools:text="Creator and Uploader"
                            tools:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:id="@+id/title_top_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/suggested_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/channel_subscribe_button"
                android:layout_toRightOf="@+id/channel_avatar"
                android:ellipsize="end"
                android:lines="1"
                android:text="Consigliati"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/video_item_detail_title_text_size"
                tools:ignore="RtlHardcoded"
                tools:text="Lorem ipsum dolor" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/items_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:visibility="visible"
                card_view:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/list_stream_item" />

            <TextView
                android:id="@+id/empty_state_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:text="@string/no_contents"
                android:layout_margin="10dp"/>

            <!--ERROR PANEL-->
            <ProgressBar
                android:id="@+id/loading_progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:visibility="visible" />

            <include
                android:id="@+id/error_panel"
                layout="@layout/error_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:visibility="visible"
                tools:visibility="visible" />
            <View
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="4dp"
                android:background="?attr/toolbar_shadow_drawable"
                android:layout_alignParentTop="true"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/idCat1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/video_item_search_padding"
                    card_view:layout_constraintEnd_toStartOf="@+id/idCat2"
                    card_view:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="0dp"
                    tools:ignore="MissingConstraints">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/itemThumbnail1"
                        android:layout_width="@dimen/video_item_grid_thumbnail_image_height"
                        android:layout_height="@dimen/video_item_grid_thumbnail_image_height"
                        android:layout_centerHorizontal="true"
                        android:padding="2dp"
                        android:onClick="@{()->dataHotViewModel.goToCategory(dataHotViewModel.catList[0])}"
                        card_view:cardCornerRadius="46dp">

                        <ImageView
                            android:id="@+id/itemThumbnailView1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/list_thumbnail_view_description"
                            android:padding="12dp"
                        android:scaleType="centerCrop"
                            tools:srcCompat="@drawable/android" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/itemTitleView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemThumbnail1"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/video_item_search_title_text_size"
                        tools:ignore="RtlHardcoded"
                        tools:text="Channel Title, Lorem ipsum" />

                    <TextView
                        android:id="@+id/itemAdditionalDetails1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/itemTitleView1"
                        android:layout_centerHorizontal="true"
                        android:lines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/video_item_search_upload_date_text_size"
                        tools:ignore="RtlHardcoded"
                        tools:text="10M subscribers" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/idCat2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/video_item_search_padding"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/idCat1"
                    tools:layout_editor_absoluteY="0dp"
                    tools:ignore="MissingConstraints">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/itemThumbnail2"
                        android:layout_width="@dimen/video_item_grid_thumbnail_image_height"
                        android:layout_height="@dimen/video_item_grid_thumbnail_image_height"
                        android:layout_centerHorizontal="true"
                        android:padding="2dp"
                        android:onClick="@{()->dataHotViewModel.goToCategory(dataHotViewModel.catList[1])}"
                        card_view:cardCornerRadius="46dp">

                        <ImageView
                            android:id="@+id/itemThumbnailView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/list_thumbnail_view_description"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@drawable/android" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/itemTitleView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemThumbnail2"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/video_item_search_title_text_size"
                        tools:ignore="RtlHardcoded"
                        tools:text="Channel Title, Lorem ipsum" />

                    <TextView
                        android:id="@+id/itemAdditionalDetails2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/itemTitleView2"
                        android:layout_centerHorizontal="true"
                        android:lines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/video_item_search_upload_date_text_size"
                        tools:ignore="RtlHardcoded"
                        tools:text="10M subscribers" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/idCat3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/video_item_search_padding"
                    card_view:layout_constraintEnd_toStartOf="@+id/idCat4"
                    card_view:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="0dp"
                    tools:ignore="MissingConstraints">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/itemThumbnail3"
                        android:layout_width="@dimen/video_item_grid_thumbnail_image_height"
                        android:layout_height="@dimen/video_item_grid_thumbnail_image_height"
                        android:layout_centerHorizontal="true"
                        android:padding="2dp"
                        android:onClick="@{()->dataHotViewModel.goToCategory(dataHotViewModel.catList[2])}"
                        card_view:cardCornerRadius="46dp">

                        <ImageView
                            android:id="@+id/itemThumbnailView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/list_thumbnail_view_description"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@drawable/android" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/itemTitleView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemThumbnail3"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/video_item_search_title_text_size"
                        tools:ignore="RtlHardcoded"
                        tools:text="Channel Title, Lorem ipsum" />

                    <TextView
                        android:id="@+id/itemAdditionalDetails3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/itemTitleView3"
                        android:layout_centerHorizontal="true"
                        android:lines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/video_item_search_upload_date_text_size"
                        tools:ignore="RtlHardcoded"
                        tools:text="10M subscribers" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/idCat4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/video_item_search_padding"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/idCat3"
                    tools:layout_editor_absoluteY="0dp"
                    tools:ignore="MissingConstraints">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/itemThumbnail4"
                        android:layout_width="@dimen/video_item_grid_thumbnail_image_height"
                        android:layout_height="@dimen/video_item_grid_thumbnail_image_height"
                        android:layout_centerHorizontal="true"
                        android:padding="2dp"
                        android:onClick="@{()->dataHotViewModel.goToCategory(dataHotViewModel.catList[3])}"
                        card_view:cardCornerRadius="46dp">

                        <ImageView
                            android:id="@+id/itemThumbnailView4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/list_thumbnail_view_description"
                            android:padding="12dp"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@drawable/android" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/itemTitleView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemThumbnail4"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:lines="1"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/video_item_search_title_text_size"
                        tools:ignore="RtlHardcoded"
                        tools:text="Channel Title, Lorem ipsum" />

                    <TextView
                        android:id="@+id/itemAdditionalDetails4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/itemTitleView4"
                        android:layout_centerHorizontal="true"
                        android:lines="1"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="@dimen/video_item_search_upload_date_text_size"
                        tools:ignore="RtlHardcoded"
                        tools:text="10M subscribers" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>