<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/idRoot3"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/selectableItemBackground"
	android:clickable="true"
	android:focusable="true"
	android:padding="@dimen/video_item_search_padding">


	<androidx.cardview.widget.CardView
		android:layout_width="@dimen/video_item_grid_thumbnail_image_height"
		android:layout_height="@dimen/video_item_grid_thumbnail_image_height"
		android:id="@+id/itemThumbnail"
		app:cardCornerRadius="40dp"
		android:padding="2dp"
		android:layout_centerHorizontal="true">
		<ImageView
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:id="@+id/itemThumbnailView"
			tools:srcCompat="@drawable/android"
			android:scaleType="centerCrop"
			android:padding="2dp"
			android:contentDescription="@string/list_thumbnail_view_description"/>
	</androidx.cardview.widget.CardView>

	<TextView
		android:id="@+id/itemTitleView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/itemThumbnail"
		android:ellipsize="end"
		android:lines="1"
		android:gravity="center_horizontal"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textSize="@dimen/video_item_search_title_text_size"
		tools:ignore="RtlHardcoded"
		tools:text="Channel Title, Lorem ipsum"/>

	<TextView
		android:id="@+id/itemAdditionalDetails"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/itemTitleView"
		android:layout_centerHorizontal="true"
		android:lines="1"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:textSize="@dimen/video_item_search_upload_date_text_size"
		tools:ignore="RtlHardcoded"
		tools:text="10M subscribers"/>

</RelativeLayout>
