<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_root"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.android.navigation.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.android.navigation.MainFragment"
        android:label="Home"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
        <action
            android:id="@+id/action_mainFragment_to_editFragment"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/action_mainFragment_to_streamFragment"
            app:destination="@id/streamFragment" />
        <action
            android:id="@+id/action_mainFragment_to_historyFragment2"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_mainFragment_to_adminFragment2"
            app:destination="@id/adminFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.android.navigation.fragments.SearchFragment"
        android:label="Search">
        <action
            android:id="@+id/action_searchFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_searchFragment_to_streamFragment"
            app:destination="@id/streamFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.android.navigation.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_self"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.android.navigation.fragments.CategoryFragment"
        android:label="Category">
        <action
            android:id="@+id/action_categoryFragment_to_streamFragment"
            app:destination="@id/streamFragment" />
        <argument
            android:name="category"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.android.navigation.fragments.EditFragment"
        android:label="Edit">
        <argument
            android:name="selectedItem"
            app:argType="com.example.android.navigation.models.ContentItem"
            app:nullable="true" />
        <action
            android:id="@+id/action_editFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/streamFragment"
        android:name="com.example.android.navigation.fragments.StreamFragment"
        android:label="Stream">
        <argument
            android:name="selectedItem"
            app:argType="com.example.android.navigation.models.ContentItem" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.android.navigation.fragments.HistoryFragment"
        android:label="HistoryFragment" />
    <fragment
        android:id="@+id/adminFragment"
        android:name="com.example.android.navigation.fragments.AdminFragment"
        android:label="AdminFragment" />
</navigation>